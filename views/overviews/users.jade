extends ../layout


block content
    div.container
        div.list-group
            div.list-group-item
                h4 Users
            for user in users
                div.list-group-item.list-group-item-action(href=`/users/${user.id}`)            
                    div.d-flex.w-100.justify-content-between
                        div.d-flex
                            a(href=`/users/${user.id}`): h5.mb-1.v-center-30(style='margin: 0 0 0 15px;')= user.name
                        div.d-flex.justify-content-between(style='width: 20%')
                            strong Department:&nbsp;
                            a(href=`/departments/${user.departmentId}`)= user.with.department.name