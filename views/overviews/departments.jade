extends ../layout


block content
    div.container
        div.list-group
            div.list-group-item
                h4 Departments
            for department in departments
                div.list-group-item.list-group-item-action(href=`/departments/${department.id}`)            
                    div.d-flex.w-100.justify-content-between
                        div.d-flex
                            a(href=`/departments/${department.id}`): h5.mb-1.v-center-30(style='margin: 0 0 0 15px;')= department.name
                        div.d-flex.justify-content-between(style='width: 20%')
                            strong Manager:&nbsp;
                            if (department.userId)
                                a(href=`/users/${department.userId}`)= department.with.user.name