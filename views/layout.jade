doctype html

html
  head
    title= title
    include includes/head.jade

    block head
  body
    div.container-fluid.d-flex(style='padding: 0;')
      div.d-flex.flex-column
        p
          strong Sidebar
         
      div.d-flex.flex-column.w-100
        nav.navbar.navbar-toggleable-md.navbar-light(style='background: #eef;')
          div.container
            button.navbar-toggler.navbar-toggler-right(type='button', data-toggel='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle Navigation')
              span.navbar-toggler-icon
            if auth
              a.navbar-brand(href='/dashboard') Project
            else
              a.navbar-brand(href='/') Project
            div#navbarNav.collapse.navbar-collapse
              ul.navbar-nav
                &nbsp;
              ul.navbar-nav.navbar-right.d-flex.justify-content-end
                  if auth
                    li.dropdown
                      a#dropdownMenu.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')= user.name
                      div.dropdown-menu(aria-labelledby='dropdownMenu')
                        form.form-inline.my-2.my-lg-0(method='POST', action='/auth/logout')
                          button.dropdown-item(type='submit') Logout
                    
                  else
                    li
    
                      a.nav-link(href='/auth/login') Login

                
        block content

    include includes/foot.jade
    block foot
